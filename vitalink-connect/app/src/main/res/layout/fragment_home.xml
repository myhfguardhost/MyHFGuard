<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- First Time User Banner -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardFirstTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/bannerRequiredBg"
                android:visibility="gone">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Setup Required"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/bannerRequiredAccent"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1. Grant Health Connect permissions\n2. Ensure your device is connected to Health Connect\n3. Allow Health Connect to retrieve your health data"
                        android:textSize="14sp"
                        android:textColor="@color/foreground"
                        android:lineSpacingMultiplier="1.2"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSetupPermissions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Grant Permissions"
                        android:textSize="14sp"
                        app:backgroundTint="@color/bannerRequiredAccent"
                        android:textColor="#FFFFFF"
                        app:cornerRadius="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Permissions Status Banner -->
            <androidx.cardview.widget.CardView
                android:id="@+id/bannerBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:visibility="gone">

                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <View
                        android:id="@+id/bannerAccent"
                        android:layout_width="6dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="12dp"
                        android:background="@color/bannerRequiredAccent"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/txtBannerTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Permissions Required"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/foreground"/>

                        <TextView
                            android:id="@+id/txtBannerDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Please grant Health Connect permissions"
                            android:textSize="14sp"
                            android:textColor="@color/foreground"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Action Cards Grid (2 per row) -->
            <LinearLayout
                android:id="@+id/cardsContainer"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center">

                <!-- Grant Permissions Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardGrant"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/cardBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_lock_lock"
                            android:tint="@color/btnPrimary"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Grant Permissions"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/foreground"
                            android:gravity="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Collect Data Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardRead"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/cardBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_view"
                            android:tint="@color/btnPrimary"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Collect Data"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/foreground"
                            android:gravity="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Scan BP Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardScan"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/cardBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_camera"
                            android:tint="@color/btnDanger"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Scan BP"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/foreground"
                            android:gravity="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Sync Status Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardSyncStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/cardBackground">

                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <View
                        android:id="@+id/syncRing"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/sync_ring_bg"
                        android:backgroundTint="@color/btnSecondary"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtSyncTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Background Sync"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/foreground"/>

                        <TextView
                            android:id="@+id/txtSyncStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Last sync: â€”"
                            android:textSize="12sp"
                            android:textColor="@color/foreground"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Loading Indicator -->
            <LinearLayout
                android:id="@+id/layoutLoading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp"
                android:visibility="gone">

                <ProgressBar
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/btnPrimary"/>

                <TextView
                    android:id="@+id/txtLoadingStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Reading data..."
                    android:textColor="@color/foreground"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- Data Cards Container -->
            <LinearLayout
                android:id="@+id/layoutDataCards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Row 1: Steps & Distance -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false"
                    android:layout_marginBottom="16dp">

                    <!-- Steps Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/cardBackground">
                        <LinearLayout
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="STEPS"
                                android:textSize="12sp"
                                android:textColor="@color/hintText"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/valSteps"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textSize="24sp"
                                android:textColor="@color/foreground"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp"/>
                            <TextView
                                android:id="@+id/statusSteps"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No Data"
                                android:textSize="12sp"
                                android:textColor="@color/hintText"
                                android:layout_marginTop="8dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Distance Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/cardBackground">
                        <LinearLayout
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DISTANCE (m)"
                                android:textSize="12sp"
                                android:textColor="@color/hintText"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/valDist"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textSize="24sp"
                                android:textColor="@color/foreground"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp"/>
                            <TextView
                                android:id="@+id/statusDist"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No Data"
                                android:textSize="12sp"
                                android:textColor="@color/hintText"
                                android:layout_marginTop="8dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Row 2: HR & SpO2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false"
                    android:layout_marginBottom="16dp">

                    <!-- HR Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/cardBackground">
                        <LinearLayout
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="HEART RATE"
                                android:textSize="12sp"
                                android:textColor="@color/hintText"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/valHr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textSize="24sp"
                                android:textColor="@color/foreground"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp"/>
                            <TextView
                                android:id="@+id/statusHr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No Data"
                                android:textSize="12sp"
                                android:textColor="@color/hintText"
                                android:layout_marginTop="8dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- SpO2 Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/cardBackground">
                        <LinearLayout
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SpO2"
                                android:textSize="12sp"
                                android:textColor="@color/hintText"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/valSpo2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textSize="24sp"
                                android:textColor="@color/foreground"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp"/>
                            <TextView
                                android:id="@+id/statusSpo2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No Data"
                                android:textSize="12sp"
                                android:textColor="@color/hintText"
                                android:layout_marginTop="8dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- No Data Help Text -->
                <TextView
                    android:id="@+id/txtNoDataHint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No data found today? Make sure your wearable is synced to Health Connect."
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/hintText"
                    android:visibility="gone"/>

            </LinearLayout>

            <!-- Old logs hidden/removed -->
            <TextView
                android:id="@+id/txtOutput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <TableLayout
                android:id="@+id/tblData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
